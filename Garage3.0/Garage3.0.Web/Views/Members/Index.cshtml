@model IEnumerable<Garage3._0.Web.Models.ViewModels.MemberIndexViewModel>

@{
	ViewData["Title"] = "Member list";
}

<h1>Member list</h1>

<p>
	<a asp-action="Create">Register new member</a>
</p>

@foreach  (var member in Model)
{
	
	  <div class="mb-3 d-inline-flex">
		<div class="card text-center">
			<div class="card-header">
				<h5 class="card-title">@member.Name</h5>
			</div>
			<div class="card-body">
				@*<h5 class="card-title">@member.Name</h5>*@
				<p class="card-text">This is a registered member. Click below to view details, edit or delete this member.</p>
			<a asp-action="Edit" asp-route-id="@member.Id">Edit</a>
			<a asp-action="Details" asp-route-id="@member.Id">Details</a>
			<a asp-action="Delete" asp-route-id="@member.Id">Delete</a>
			</div>
			<div class="card-footer text-muted">
				E-mail: @member.Email
			</div>
		</div>
	  </div>
}

