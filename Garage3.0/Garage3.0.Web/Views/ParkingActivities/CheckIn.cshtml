@model Garage3._0.Web.Models.ViewModels.ParkingActivityCheckInViewModel

@{
    ViewData["Title"] = "Check In";
}

<h1>Check In</h1>

<h4>Parking Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParkingSpot" class="control-label"></label>
                <partial name="_ParkingSpotInput" for="ParkingSpot" />
                <span asp-validation-for="ParkingSpot.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle" class="control-label"></label>
                <partial name="_VehicleInput" for="Vehicle" />
                <span asp-validation-for="Vehicle.Id" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class ="form-control" asp-items="ViewBag.VehicleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpotId" class="control-label"></label>
                <select asp-for="ParkingSpotId" class ="form-control" asp-items="ViewBag.ParkingSpotId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Check In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

